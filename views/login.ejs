<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="pt-2 fw-bold">Login</h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="/login">
                        <div class="form-group pb-2">
                            <label for="username" class="pb-1">Username</label>
                            <input type="text" class="form-control input-custom" style="font-family: Montserrat, sans-serif;" id="username" name="username" placeholder="Enter username" />
                        </div>
                        <div class="form-group pb-4">
                            <label for="password" class="pb-1">Password</label>
                            <input type="password" class="form-control input-custom" style="font-family: Montserrat, sans-serif;" id="password" name="password" placeholder="Password" />
                        </div>
                        <div class="text-center pb-2">
                            <button type="submit" class="btn btn-custom btn-block text-white w-50">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 text-center alert alert-danger mt-4" <% if (!message) { %>style="display:none"<% } %>>
            <%= message %>
    </div>
</div>


<style>
    .btn-custom {
        background-color: #333;
        border-color: #333;
        transition: all 0.4s ease-in-out;
    }

    .btn-custom:focus,
    .btn-custom:active,
    .btn-custom:hover {
        background-color: #222;
        border-color: #222;
        outline: none;
    }

    .input-custom:focus {
        border-color: #ff4d4d;
        box-shadow: 0 0 0 0.2rem rgba(255, 77, 77, 0.25);
        transition: all 0.4s ease-in-out;
    }
</style>